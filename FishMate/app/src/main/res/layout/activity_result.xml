<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.result.ResultActivity">

    <!-- Image View to show the result image -->
    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/result_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/diagnosisScrollView"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/fishmate_logo" />

    <!-- Scrollable View for Diagnosis and Explanation Text -->
    <ScrollView
        android:id="@+id/diagnosisScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/resultImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/barChart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Diagnosis Text -->
            <TextView
                android:id="@+id/diagnosisTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diagnosis"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Explanation Text -->
            <TextView
                android:id="@+id/explanationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explanation"
                android:textSize="16sp" />

            <!-- Suggestion Text -->
            <TextView
                android:id="@+id/suggestionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_suggestion"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

    <!-- Bar Chart for displaying model output -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/diagnosisScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/Resloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>